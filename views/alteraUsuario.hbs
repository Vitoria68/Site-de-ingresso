<div class="form-container">
    <form method='POST' action='/usuario/atualiza/{{usuario.cpf}}'>
       

        <legend>Informações Pessoais</legend>

        <div class="row">
            <div class="col-6">
                <p><label for="nome">Nome Completo</label></p>
                <p><input type="text" name="nome" value="{{usuario.nome}}" size="60" required></p>
            </div>
            <div class="col-6">
                <p><label for="cpf">Informe seu CPF: </label></p>
                <p><input type='number' name='cpf' value="{{usuario.cpf}}" size="30" readonly/></p>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <p><label for="email">Informe seu e-mail:</label></p>
                <p><input type='text' name='email' value="{{usuario.email}}" size="60" required /></p>
            </div>
            <div class="col-6">
                <p><label for="senha"> Crie uma senha para login</label>
                </p>
                <p><input type="text" name="senha" value="{{usuario.senha}}" size="60" required>
                </p>
            </div>
        </div>
        <br>
        <fieldset>
            <legend>
                Dados de Pagamento
            </legend>

            <div class="row">
                <div class="col-6">
                    <p><label for="nomeCartao">Nome do Cartão </label></p>
                    <p><input type="text" name="nomeCartao" value="{{usuario.nomeCartao}}" size="60" required></p>
                </div>
                <div class="col-6">
                    <p> <label for="numero">Número do Cartão</label></p>
                    <p><input type="number" name="numero" value="{{usuario.numero}}" size="60" required></p>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <p><label for="validade">Ano de Validade do Cartão:</label></p>
                    <p><input type="text" name="validade" min=2025 value="{{usuario.validade}}" size="60" required></p>
                </div>
                <div class="col-6">
                    <p><label for="cvv">CVV</label></p>
                    <p> <input type="text" name="cvv" value="{{usuario.cvv}}" size="60" required></p>

                </div>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-success">Alterar</button>
        <a href="/"><button type="button" class="btn btn-secondary">Cancelar</button></a>
    </form>
</div>